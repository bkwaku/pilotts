<% content_for :title, "Reset password" %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <%= link_to root_path, class: "auth-logo" do %>
        <i class="fas fa-paper-plane" style="color: #1A8917; font-size: 2rem;"></i>
      <% end %>
      <h1 class="auth-title">Forgot your password?</h1>
      <p class="auth-subtitle">Enter your email to receive reset instructions</p>
    </div>

    <%= form_with url: passwords_path, class: "auth-form" do |form| %>
      <div class="form-group">
        <%= form.label :email_address, "Email address", class: "form-label" %>
        <%= form.email_field :email_address, 
            required: true, 
            autofocus: true, 
            autocomplete: "username", 
            placeholder: "you@example.com", 
            value: params[:email_address],
            class: "form-input" %>
      </div>

      <div class="form-actions">
        <%= form.submit "Send reset instructions", class: "btn btn-primary btn-full-width" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <%= link_to "Back to sign in", new_session_path, class: "auth-link" %>
    </div>
  </div>
</div>
