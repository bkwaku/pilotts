<% content_for :title, "Contact" %>

<div class="contact-page">
  <h1>Get in Touch</h1>
  
  <p class="contact-intro">
    Have a question, want to collaborate, or just want to say hello? 
    I'd love to hear from you. Send me a message using the form below.
  </p>

  <%= form_with url: contact_path, local: true, class: "contact-form" do |form| %>
    <div class="form-group">
      <%= form.label :name, "Your Name", class: "form-label" %>
      <%= form.text_field :name, required: true, class: "form-input", placeholder: "Enter your full name" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Your Email", class: "form-label" %>
      <%= form.email_field :email, required: true, class: "form-input", placeholder: "Enter your email address" %>
    </div>

    <div class="form-group">
      <%= form.label :message, "Your Message", class: "form-label" %>
      <%= form.text_area :message, required: true, rows: 6, class: "form-textarea", placeholder: "Write your message here..." %>
    </div>

    <div class="form-actions">
      <%= form.submit "Send Message", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
